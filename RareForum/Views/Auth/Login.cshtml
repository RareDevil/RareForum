@model RareForum.Models.User
@{
    ViewData["Title"] = "Login";
    // Layout = null;
}
<div class="d-flex align-items-center py-4">
    <main class="form-signin w-100 m-auto">
        <form asp-action="Login">
            <h1 class="h3 mb-3 fw-normal text-center">Please sign in</h1>
            <div> @* This is just here to keep the design of the inputs below *@
                <div class="form-floating">
                    <input asp-for="Username" type="text" class="form-control" id="floatingUsername" placeholder="">
                    <label asp-for="Username" for="floatingUsername">Username</label>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="">
                    <label asp-for="Password" for="floatingPassword">Password</label>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="submit" value="Sign in" class="btn btn-primary w-100 py-2" />
        </form>
        <hr class="mt-4" />
        <div>Don't have an account? <a asp-area="" asp-controller="Auth" asp-action="Register">Register now!</a></div>
    </main>
</div>
@* Lets do some hacking *@
<div style="display: none;">
    <span asp-validation-for="Username"></span>
    <span asp-validation-for="Password"></span>
</div>