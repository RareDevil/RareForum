@model RareForum.Models.User
@{
    ViewData["Title"] = "Profile";
}

<div class="d-flex flex-md-row justify-content-center flex-column align-items-stretch align-items-md-start pt-3">
    @await Html.PartialAsync("_ProfileImage", new UserImageUpload(),  new ViewDataDictionary(ViewData)
    {
        {
            "UserId", Model.UserId
        }
    })
    <div class="card account-details m-3 m-md-0 bg-body-tertiary shadow">
        <div class="card-header">
            Account Details
        </div>
        <div class="card-body">
            <form asp-action="Update">
                <input type="hidden" asp-for="UserId"/>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="Username" type="text" class="form-control" id="UsernameInput"
                                   placeholder="Username">
                            <label asp-for="Username" for="UsernameInput">Username</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="FirstName" type="text" class="form-control" id="FirstNameInput"
                                   placeholder="John">
                            <label asp-for="FirstName" for="FirstNameInput">First name</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="LastName" type="text" class="form-control" id="LastNameInput"
                                   placeholder="Doe">
                            <label asp-for="LastName" for="LastNameInput">Last name</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="Location" type="text" class="form-control" id="LocationInput"
                                   placeholder="Somewhere">
                            <label asp-for="Location" for="LocationInput">Location</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="Email" type="email" class="form-control" id="EmailInput"
                                   placeholder="name@example.com">
                            <label asp-for="Email" for="EmailInput">Email address</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="PhoneNumber" type="tel" class="form-control" id="PhoneNumberInput"
                                   placeholder="22558844">
                            <label asp-for="PhoneNumber" for="PhoneNumberInput">Phone number</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="Birthday" type="date" class="form-control" id="BirthdayInput"
                                   placeholder="">
                            <label asp-for="Birthday" for="BirthdayInput">Birthday</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span style="color: rgba(var(--bs-body-color-rgb), .65); pointer-events: none; padding: 0.25rem .75rem;">Signature</span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <textarea asp-for="Signature" class="form-control" id="easyMDE"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <input type="submit" class="btn btn-primary" value="Save changes"/>
                    </div>
                    <div class="col d-flex justify-content-end">
                        <a asp-area="" asp-controller="Auth" asp-action="UpdatePassword" class="btn btn-warning">Change
                            password</a>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>

@* Lets do some hacking *@
<div style="display: none;">
    <span asp-validation-for="Username"></span>
    <span asp-validation-for="Email"></span>
    <span asp-validation-for="Birthday"></span>
</div>

<script>
    const easyMDE = new EasyMDE({
        maxHeight: "100px",
        styleSelectedText: false,
        spellChecker: false,
        status: false,
        renderingConfig: {
            singleLineBreaks: false, // this is how it is parsed with the parser!
        }
    });
</script>