@model RareForum.Models.UserPasswordUpdate

@{
    ViewData["Title"] = "Password update";
}

<div class="d-flex align-items-center py-4">
    <main class="form-signin w-100 m-auto">
        <form asp-action="UpdatePassword">
            <h1 class="h3 mb-3 fw-normal text-center">Password update</h1>
            <div> @* This is just here to keep the design of the inputs below *@
                <div class="form-floating">
                    <input asp-for="OldPassword" type="password" class="form-control" id="floatingUsername" placeholder="">
                    <label asp-for="OldPassword" for="floatingUsername">Old password</label>
                </div>
                <div class="form-floating">
                    <input asp-for="NewPassword" type="password" class="form-control" id="floatingPassword" placeholder="">
                    <label asp-for="NewPassword" for="floatingPassword">New Password</label>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="submit" value="Update password" class="btn btn-primary w-100 py-2" />
        </form>
        <hr class="mt-4" />
        <div class="text-center">
            Don't want to update your password?
            <br/>
            <a asp-area="" asp-controller="Auth" asp-action="Index">Go back to profile!</a>
        </div>
    </main>
</div>
@* Lets do some hacking *@
<div style="display: none;">
    <span asp-validation-for="OldPassword"></span>
    <span asp-validation-for="NewPassword"></span>
</div>